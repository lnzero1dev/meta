{
    "package": {
        "LibGUI": {
            "type": "library",
            "source": [
                "${root}/Libraries/LibGUI/*.cpp"
            ],
            "include": [
                "${root}/Libraries/LibGUI",
                "${gendata}"
            ],
            "run_generators": {
                "IPCCompiler": [
                    {
                        "input": "${root}/Servers/WindowServer/WindowServer.ipc",
                        "output": "${gendata}/WindowServerEndpoint.h"
                    }
                ]
            },
            "dependency": [
                "AK",
                "LibCore",
                "LibDraw",
                "LibIPC",
                "LibThread"
            ],
            "deploy": [
                {
                    "type": "target",
                    "name": "gui",
                    "dest": "${LibDir}"
                },
                {
                    "type": "directory",
                    "source": "${root}/Libraries/LibGUI/",
                    "pattern": "*.h",
                    "dest": "${IncludeDir}/LibGUI"
                }
            ]
        }
    }
}
