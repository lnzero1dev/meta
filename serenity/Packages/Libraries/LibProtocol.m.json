{
    "package": {
        "LibProtocol": {
            "type": "library",
            "source": [
                "${root}/Libraries/LibProtocol/*.cpp"
            ],
            "include": [
                "${root}/Libraries/LibProtocol",
                "${gendata}"
            ],
            "run_generators": {
                "IPCCompiler": [
                    {
                        "input": "${root}/Servers/ProtocolServer/ProtocolClient.ipc",
                        "output": "${gendata}/ProtocolServer/ProtocolClientEndpoint.h"
                    },
                    {
                        "input": "${root}/Servers/ProtocolServer/ProtocolServer.ipc",
                        "output": "${gendata}/ProtocolServer/ProtocolServerEndpoint.h"
                    }
                ]
            },
            "dependency": [
                "AK",
                "LibIPC"
            ],
            "deploy": [
                {
                    "type": "target",
                    "name": "protocol",
                    "dest": "${LibDir}"
                },
                {
                    "type": "directory",
                    "source": "${root}/Libraries/LibProtocol/",
                    "pattern": "*.h",
                    "dest": "${IncludeDir}/LibProtocol"
                }
            ]
        }
    }
}
