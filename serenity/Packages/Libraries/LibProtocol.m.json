{
    "package": {
        "LibProtocol": {
            "type": "library",
            "source": [
                "${root}/Libraries/LibProtocol/*.cpp"
            ],
            "include": [
                "${root}/Libraries/LibProtocol",
                "${gendata}/LibProtocol"
            ],
            "run_generators": {
                "IPCCompiler": {
                    "input": "${root}/Servers/ProtocolServer/ProtocolClient.ipc"
                }
            },
            "dependency": [
                "AK"
            ],
            "deploy": [
                {
                    "type": "target",
                    "name": "protocol",
                    "dest": "${LibDir}"
                },
                {
                    "type": "directory",
                    "source": "${root}/Libraries/LibProtocol/",
                    "pattern": "*.h",
                    "dest": "${IncludeDir}/LibProtocol"
                }
            ]
        }
    }
}
