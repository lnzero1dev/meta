{
    "package": {
        "LibMarkdown": {
            "type": "library",
            "source": [
                "${root}/Libraries/LibMarkdown/*.cpp"
            ],
            "include": [
                "${root}/Libraries/LibMarkdown"
            ],
            "deploy": [
                {
                    "type": "target",
                    "name": "markdown",
                    "dest": "${LibDir}"
                },
                {
                    "type": "directory",
                    "source": "${root}/Libraries/LibMarkdown/",
                    "pattern": "*.h",
                    "dest": "${IncludeDir}/LibMarkdown"
                }
            ]
        }
    }
}
