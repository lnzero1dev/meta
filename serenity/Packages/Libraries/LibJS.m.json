{
    "package": {
        "LibJS": {
            "type": "library",
            "source": [
                "${root}/Libraries/LibJS/**/*.cpp"
            ],
            "include": [
                "${root}/Libraries/LibJS"
            ],
            "dependency": [
                "LibC"
            ],
            "deploy": [
                {
                    "type": "target",
                    "name": "js",
                    "dest": "${LibDir}"
                },
                {
                    "type": "directory",
                    "source": "${root}/Libraries/LibJS/",
                    "pattern": "*.h",
                    "dest": "${IncludeDir}/LibJS"
                }
            ]
        }
    }
}
