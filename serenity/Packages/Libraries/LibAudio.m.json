{
    "package": {
        "LibAudio": {
            "type": "library",
            "source": [
                "${root}/Libraries/LibAudio/*.cpp"
            ],
            "include": [
                "${root}/Libraries/LibAudio",
                "${gendata}"
            ],
            "dependency": [
                "LibIPC"
            ],
            "run_generators": {
                "IPCCompiler": [
                    {
                        "input": "${root}/Servers/AudioServer/AudioClient.ipc",
                        "output": "${gendata}/AudioClientEndpoint.h"
                    },
                    {
                        "input": "${root}/Servers/AudioServer/AudioServer.ipc",
                        "output": "${gendata}/AudioServerEndpoint.h"
                    }
                ]
            },
            "deploy": [
                {
                    "type": "target",
                    "name": "audio",
                    "dest": "${LibDir}"
                },
                {
                    "type": "directory",
                    "source": "${root}/Libraries/LibAudio/",
                    "pattern": "*.h",
                    "dest": "${IncludeDir}/LibAudio"
                }
            ]
        }
    }
}
