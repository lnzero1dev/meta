{
    "package": {
        "LibC": {
            "type": "library",
            "source": [
                "${root}/Libraries/LibC/**/*.cpp",
                "${root}/Libraries/LibC/**/*.S",
                "${root}/Libraries/LibELF/*.cpp",
                "${root}/AK/*.cpp"
            ],
            "include": [
                "${root}/Libraries/LibC",
                "${root}/Libraries",
                "${root}"
            ],
            "deploy": [
                {
                    "type": "target",
                    "name": "c",
                    "dest": "${LibDir}"
                },
                {
                    "type": "directory",
                    "source": "${root}/Libraries/LibC/",
                    "pattern": "*.h",
                    "dest": "${IncludeDir}"
                },
                {
                    "type": "object",
                    "source": "${root}/Libraries/LibC/crt0.cpp",
                    "name": "crt0.o",
                    "dest": "${LibDir}"
                },
                {
                    "type": "object",
                    "source": "${root}/Libraries/LibC/crti.S",
                    "name": "crti.o",
                    "dest": "${LibDir}"
                },
                {
                    "type": "object",
                    "source": "${root}/Libraries/LibC/crtn.S",
                    "name": "crtn.o",
                    "dest": "${LibDir}"
                }
            ]
        }
    }
}
