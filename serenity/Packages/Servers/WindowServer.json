{
    "package": {
        "WindowServer": {
            "type": "executable",
            "source": [
                "${root}/Servers/WindowServer/*.cpp"
            ],
            "include": [
                "${root}/Servers/WindowServer",
                "${gendata}/WindowServer"
            ],
            "dependency": [
                "LibDraw",
                "LibCore",
                "LibThread",
                "LibPThread",
                "LibIPC"
            ],
            "run_generators": {
                "IPCCompiler": {
                    "input": [
                        "${root}/Servers/WindowServer/WindowServer.ipc",
                        "${root}/Servers/WindowServer/WindowClient.ipc"
                    ]
                }
            },
            "deploy": [
                {
                    "type": "directory",
                    "source": "${root}/Servers/WindowServer/",
                    "pattern": "*.h",
                    "dest": "${IncludeDir}/WindowServer"
                }
            ]
        }
    }
}