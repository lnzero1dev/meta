{
    "image": {
        "default-image": {
            "install": "*",

            "toolchain": {
                "type": "cross",
                "build": "x86_64",
                "host": "x86_64",
                "target": "i686"
            },

            "install_dirs": {
                "bindir": "bin",
                "sbindir": "sbin",
                "libexecdir": "libexec",
                "sysconfdir": "etc",
                "sharedstatedir": "shared",
                "localstatedir": "var",
                "includedir": "include",
                "datarootdir": "share",
                "datadir": "${datarootdir}",
                "infodir": "${datarootdir}/info",
                "localedir": "${datarootdir}/locale",
                "mandir": "${datarootdir}/man"
            }
        }
    }
}
