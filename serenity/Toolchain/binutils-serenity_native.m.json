{
    "package": {
        "binutils-serenity": {
            "version": "2.33.1",
            "type": "collection",
            "toolchain": {
                "steps": [
                    "download",
                    "patch",
                    "configure",
                    "make",
                    "install"
                ],
                "options": {
                    "download": {
                        "url": "http://ftp.gnu.org/gnu/binutils/binutils-${version}.tar.gz",
                        "md5sum": "e03739b042a14376d727ddcfd05a9bc3"
                    },
                    "patch": {
                        "file": "patches/gcc.patch"
                    },
                    "configure": "--target=i686-pc-serenity --enable-shared --disable-nls", # --with-sysroot=$SYSROOT has to be set by toolchain!
                    "install": "install"
                }
            },
            "dependencies": [
                "bin-utils-serenity",
                "serenity-LibC",
                "serenity-LibM"
            ]
        }
    }
}