{
    "package": {
        "libstdc++-v3": {
            "version": "9.2.0",
            "type": "collection",
            "machine": "host",
            "provides": {
                "library": [
                    "libstdc++-v3"
                ]
            },
            "toolchain": {
                "steps": [
                    "download",
                    "patch",
                    "configure",
                    "build",
                    "install"
                ],
                "options": {
                    "download": {
                        "url": "http://ftp.gnu.org/gnu/gcc/gcc-${version}.tar.xz",
                        "url_hash": "3818ad8600447f05349098232c2ddc78",
                        "url_hash_type": "md5"
                    },
                    "patch": {
                        "file": "${root}/Toolchain/Patches/gcc.patch"
                    },
                    "configure": {
                        "flags": [
                            "--prefix=${sysroot}",
                            "--with-sysroot=${sysroot}",
                            "--target=i686-pc-serenity",
                            "--disable-nls",
                            "--with-newlib",
                            "--enable-shared",
                            "--enable-languages=c,c++"
                        ]
                    },
                    "build": {
                        "targets": "all-target-libstdc++-v3"
                    },
                    "install": {
                        "targets": "install-target-libstdc++-v3"
                    }
                }
            },
            "dependency": [
                "binutils",
                "gcc",
                "LibC_host",
                "LibM_host"
            ]
        }
    }
}
