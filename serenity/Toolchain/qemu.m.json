{
    "package": {
        "qemu": {
            "version": "4.1.0",
            "type": "collection",
            "machine": "host",
            "provides": {
                "executable": [
                    "qemu-img",
                    "qemu-system-i386"
                ]
            },
            "toolchain": {
                "steps": [
                    "download",
                    "configure",
                    "build",
                    "install"
                ],
                "options": {
                    "download": {
                        "url": "https://download.qemu.org/qemu-${version}.tar.xz",
                        "url_hash": "cdf2b5ca52b9abac9bacb5842fa420f8",
                        "url_hash_type": "md5"
                    },
                    "configure": {
                        "flags": [
                            "--prefix=${sysroot}",
                            "--with-sysroot=${sysroot}",
                            "--target-list=i386-softmmu",
                            "--enable-gtk"
                        ]
                    }
                }
            },
            "dependency": [
                "libgtk-3"
            ]
        }
    }
}
