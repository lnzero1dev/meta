{
    "package": {
        "binutils": {
            "version": "2.33.1",
            "type": "collection",
            "machine": "host",
            "toolchain": {
                "steps": [
                    "download",
                    "patch",
                    "configure",
                    "build",
                    "install"
                ],
                "options": {
                    "download": {
                        "url": "http://ftp.gnu.org/gnu/binutils/binutils-${version}.tar.xz",
                        "url_hash": "9406231b7d9dd93731c2d06cefe8aaf1",
                        "url_hash_type": "md5"
                    },
                    "patch": {
                        "file": "${root}/Toolchain/Patches/binutils.patch"
                    },
                    "configure": {
                        "flags": [
                            "--prefix=${sysroot}",
                            "--with-sysroot=${sysroot}",
                            "--target=i686-pc-serenity",
                            "--enable-shared",
                            "--disable-nls"
                        ]
                    }
                }
            }
        }
    }
}
